package net.cybertristam.networkUtilities;


import java.net.DatagramSocket;
import java.net.Socket;
import java.net.SocketAddress;
import java.net.InetSocketAddress;

public class NetworkConnection implements INetworkConnection {
    String address;
    Integer portNumber;
    Integer timeout;
    SocketAddress socketAddress;
    NetworkSocket connectionManager;

    public NetworkConnection() {
        setAddress("localhost");
        setPortNumber(new Integer(7));
        makeSocketAddress();
        setTimeout(new Integer(30));
        setConnectionManager(new Socket());
    }

    public String getAddress(String address) {
        return address;
    }

    public void setAddress(String address) {
        this.address = address;
    }

    public Integer getPortNumber() {
        return portNumber;
    }

    public void setPortNumber(Integer portNumber) {
        this.portNumber = portNumber;
    }

    public Integer getTimeout() {
        return timeout;
    }

    public void setTimeout(Integer timeout) {
        this.timeout = timeout;
    }

    public SocketAddress getSocketAddress() {
       return this.socketAddress;
    }

    public void setSocketAddress(SocketAddress socketAddress) {
        this.socketAddress = socketAddress;
    }

    public void makeSocketAddress() {
        this.socketAddress = new InetSocketAddress(this.address,this.portNumber.intValue());
    }

    public void makeConnection() {
        this.connectionManager.makeConnection(this.socketAddress,this.timeout);
    }

    public Object getConnectionManager() {
        return connectionManager;
    }

    public void setConnectionManager(DatagramSocket connectionManager) {
        this.connectionManager = new NetworkSocket(connectionManager);
    }

    public void setConnectionManager(Socket connectionManager) {
        this.connectionManager = new NetworkSocket(connectionManager);
    }

    public void exceptionError(Exception ex) {
    }

}
